{
  "name": "ninstagram",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "tsc": "tsc",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types:server": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "types": "concurrently npm:types:*",
    "dev:server": "nodemon --exec ts-node src/index.ts -e ts,graphql",
    "dev:client": "npm start --prefix client",
    "dev": "NODE_ENV=development concurrently npm:dev:*",
    "prebuild": "rm -rf build",
    "postinstall": "npm run tsc",
    "build:server": "tsc",
    "build:client": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "build": "concurrently npm:build:*",
    "postbuild": "cp ./src/api/**/**/*.graphql ./build/api/ && mkdir ./build/client && cp -av ./client/build ./build/client/",
    "start": "NODE_ENV=production node ./build/index.js"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testRegex": "\\.(test|spec)\\.((js|ts))$",
    "setupFilesAfterEnv": [
      "<rootDir>/src/testUtils/setup.ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": "2500"
  },
  "author": "naamoonoo",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.9.16",
    "bcrypt": "^3.0.7",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "gql-merge": "0.0.6",
    "graphql": "^14.6.0",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.2",
    "merge-graphql-schemas": "^1.7.6",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "path": "^0.12.7",
    "pg": "^7.17.1",
    "styled-reset": "^4.1.2",
    "subscriptions-transport-ws": "^0.9.16",
    "twilio": "^3.39.3",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.1.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.5.1",
    "@types/passport": "^1.0.2",
    "@types/passport-facebook": "^2.1.9",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/supertest": "^2.0.8",
    "babel-runtime": "^6.26.0",
    "concurrently": "^5.1.0",
    "graphql-request": "^1.8.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.5"
  }
}
